<div class="container">
  <div class="row mt-5">
    <div class="col-10">
      <h5 class="bg-light text-center" style="width: 150px">新規会員登録</h5>

      <div class="signup mt-5">
        <%= form_for(resource, as: resource_name, url: customers_path) do |f| %>
          <%= render "customers/shared/error_messages", resource: resource %>

        <div class="form-group row">
            <%= f.label :名前, class:"col-3" %>
          <div class="col-4">
            <%= f.label :last_name, "(姓)", class:"col-form-label" %>
            <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", placeholder:"令和", class:"form-control" %>
          </div>
          <div class="col-4">
            <%= f.label :first_name, "(名)" %>
            <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", placeholder:"道子", class:"form-control" %>
          </div>
        </div>

          <div class="form-group row">
            <%= f.label :フリガナ, class:"col-3" %>
            <div class="col-4">
              <%= f.label :last_name_kana, "(セイ)" %>
              <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana", placeholder:"レイワ", class:"form-control" %>
            </div>
            <div class="col-4">
              <%= f.label :first_name_kana, "(メイ)" %>
              <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", placeholder:"ミチコ", class:"form-control" %>
            </div>
          </div>

          <div class="form-group row">
            <%= f.label :メールアドレス, class:"col-3 col-form-label" %>
            <div class="col-8">
              <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"sample@example.com", class:"form-control" %>
            </div>
          </div>

          <div class="form-group row">
            <%= f.label :"郵便番号(ハイフンなし)", class:"col-3 col-form-label" %>
            <div class="col-4">
              <%= f.text_field :postcode, autofocus: true, autocomplete: "postcode", placeholder:"0000000", class:"form-control" %>
            </div>
          </div>

          <div class="form-group row">
            <%= f.label :住所, class:"col-3 col-form-label" %>
            <div class="col-8">
              <%= f.text_field :address, autofocus: true, autocomplete: "address", placeholder:"東京都渋谷区代々木神園町0-0", class:"form-control" %>
            </div>
          </div>

          <div class="form-group row">
            <%= f.label :"電話番号(ハイフンなし)", class:"col-3 col-form-label" %>
            <div class="col-4">
              <%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number", placeholder:"0000000000", class:"form-control" %>
            </div>
          </div>

          <div class="form-group row">
            <%= f.label :"パスワード(6文字以上)", class:"col-3 col-form-label" %>
            <div class="col-4">
              <%= f.password_field :password, autocomplete: "new-password", class:"form-control" %>
            </div>
          </div>

          <div class="form-group row">
            <%= f.label :"パスワード(確認用)", class:"col-3 col-form-label" %>
            <div class="col-4">
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control" %>
            </div>
          </div>

          <div class="form-group row">
            <legend class="col-3 col-form-control"></legend>
            <div class="col-4">
              <%= f.submit "新規登録", class:"btn btn-success px-5" %>
            </div>
          </div>
        <% end %>
      </div>

      <div class="to-signin mt-4">
        <h5 class="bg-light text-center" style="width: 200px">既に登録済みの方</h5>
        <%= render "customers/shared/links" %>
      </div>
    </div>
  </div>
</div>
