<div class="container">
  <div class="row">
    <div class="col-10">
      <h2>ログイン</h2>

      <div class="signin mt-5">
        <h5 class="mb-4">会員の方はこちらからログイン</h5>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-group row">
            <%= f.label :メールアドレス, class:"col-3 col-form-label" %>
            <div class="col-5">
              <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com", class:"form-control" %>
            </div>
          </div>

          <div class="form-group row">
            <%= f.label :パスワード, class:"col-3 col-form-label" %>
            <div class="col-5">
              <%= f.password_field :password, autocomplete: "current-password", class:"form-control" %>
            </div>
          </div>

          <div class="form-group row">
            <legend class="col-3 col-form-label"></legend>
            <div class="col-3">
              <%= f.submit "ログイン", class:"btn btn-primary px-5" %>
            </div>
          </div>
        <% end %>
      </div>

      <div class="tosignup mt-5">
        <h5 class="mb-4">会員登録がお済みでない方</h5>
        <%= render "customers/shared/links" %>
      </div>

    </div>
  </div>
</div>
