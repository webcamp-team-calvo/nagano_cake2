<h4 class="col-sm-2 bg-light text-center mt-5">商品編集</h4>
　 <%= form_with model: [:admin, @item], local:true do |f| %>

　    <div class="field">
        <label class="col-sm-2">画像投稿</label>
          <%= f.attachment_field :image %>
        </div>

      <div class="form-group">
        <label class="col-sm-2">商品名</label>
          <%= f.text_field :name %>
        </div>

      <div class="form-group">
        <label class="col-sm-2">商品説明</label>
          <%= f.text_area :information %>
        </div>

      <div class="form-group">
        <label class="col-sm-2">ジャンル</label>
        <%= f.collection_select :category_id, Category.all, :id, :name, {promt: '選択してください'} %>
      </div>

      <div class="form-group">
        <label class="col-sm-2 control-label">税抜価格</label>
          <%= f.text_field :price %>円
      </div>

      <div class="form-group">
        <label class="col-sm-2 control-label">販売ステータス</label>
         <%= f.radio_button :is_active, :true, checked: true %>
         <%= f.label :販売中 %>
         <%= f.radio_button :is_active, :false %>
         <%= f.label :販売停止中 %>
      </div>

      <div class="actions">
        <label class="col-sm-2 control-label"></label>
        <%= f.submit "変更を保存", class:"btn btn-success" %>
      </div>
    <% end %>
