<h4>商品詳細</h4>
　 <%= form_with model: [:admin, @item], local:true do |f| %>
　    <div class="field">
        <label class="col-sm-2 control-label">画像投稿</label>
        <div class="col-sm-10">
          <%= f.attachment_field :image  %>
        </div>
      </div>

      <div class="form-group">
        <label class="col-sm-2 control-label">商品名</label>
        <div class="col-sm-4">
          <%= f.text_field :name, class:"form-control" %>
        </div>
      </div>

      <div class="form-group">
        <label class="col-sm-2 control-label">商品説明</label>
        <div class="col-sm-7">
          <%= f.text_area :information, class:"form-control" %>
        </div>
      </div>

      <div class="form-group">
        <label class="col-sm-2 control-label">ジャンル</label>
        <%= f.collection_select :category_id, Category.all, :id, :name, {promt: '選択してください'} %>
      </div>

      <div class="form-group">
        <label class="col-sm-2 control-label">税抜価格</label>
          <%= f.text_field :price %>円
      </div>

      <div class="form-group">
        <label class="col-sm-2 control-label">販売ステータス</label>
         <%= f.radio_button :is_active, :true, checked: true %>
         <%= f.label :販売中 %>
         <%= f.radio_button :is_active, :false %>
         <%= f.label :販売停止中 %>
      </div>

      <div class="actions">
        <label class="col-sm-2 control-label"></label>
        <%= f.submit "変更を保存", class:"btn btn-success" %>
      </div>
    </div>
  <% end %>
</div>
