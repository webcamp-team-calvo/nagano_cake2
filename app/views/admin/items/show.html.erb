<div class='container'>
  <div class='row'>
    <div class='col-lg-12'>
  		<h2>商品詳細</h2>
  		<table class='table'>
  		  <tr>
  		    <th></th>
  		    <th>商品名</th>
  		    <th>商品説明</th>
  		    <th>ジャンル</th>
  		    <th>税込価格（税抜き価格)</th>
  		    <th>販売ステータス</th>
  		    <th></th>
  		  </tr>
  		    <td>
  		      <%= attachment_image_tag(@item, :image, :fill, 100, 100, fallback: "no-image-icon.jpg") %>
          </td>
          <td><%= @item.name %></td>
  		    <td><%= @item.information %></td>
  		    <td><%= @item.category.name %></td>
  		    <td><%= addTax(@item.price) %>(<%= @item.price %>)円</td>
  		    <td>
  		      <% if @item.is_active == true %>
  		       販売中
  		      <% else%>
  		       販売停止中
  		      <% end %>
  		    </td>
  		    <td><%= link_to '編集する', edit_admin_item_path(@item), class: "btn btn-success" %></td>
        </tr>
      </table>
    </div>
  </div>
</div>
