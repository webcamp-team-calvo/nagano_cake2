<h3>新規商品登録</h3>
<%= form_with model: [:admin, @item], local:true do |f| %>
<div class="field">
<h4>商品画像</h4>
<%= f.attachment_field :image %>
</div>
<div class="field">
<h4>商品名</h4>
<%= f.text_field :name %>
</div>
<div class="field">
<h4>商品説明</h4>
<%= f.text_area :information %>
</div>
<div class="field">
<h4>ジャンル</h4>
<%= f.collection_select :category_id, Category.all, :id, :name, {promt: '選択してください'} %>
</div>
<div class="field">
<h4>税抜き価格</h4>
<%= f.text_field :price %>円
</div>
<div class="field">
<h4>販売ステータス</h4>
<%= f.radio_button :is_active, :true, checked: true %>
<%= f.label :販売中 %>
<%= f.radio_button :is_active, :false %>
<%= f.label :販売停止中 %>
</div>
<%= f.submit "新規登録" %>
<% end %>