<h4 class="col-sm-2 bg-light text-center mt-5">商品新規登録</h4>
　 <%= form_with model: [:admin, @item], local:true do |f| %>
　    <div class="field">
        <label class="col-sm-2">画像投稿</label>
          <%= f.attachment_field :image %>
        </div>

      <div class="form-group">
        <label class="col-sm-2">商品名</label>
          <%= f.text_field :name,:placeholder => "商品名" %>
        </div>

      <div class="form-group">
        <label class="col-sm-2">商品説明</label>
          <%= f.text_area :information, :placeholder => "ここに説明文をき記述します", size: "30x5"%>
        </div>

      <div class="form-group">
        <label class="col-sm-2">ジャンル</label>
        <%= f.collection_select :category_id, Category.all, :id, :name, {prompt: '選択してください'} %>
      </div>

      <div class="form-group">
        <label class="col-sm-2 control-label">税抜き価格</label>
          <%= f.text_field :price, :placeholder => "1000" %>円
      </div>

      <div class="form-group">
        <label class="col-sm-2 control-label">販売ステータス</label>
         <%= f.radio_button :is_active, :true, checked: true %>
         <%= f.label :販売中 %>
         <%= f.radio_button :is_active, :false %>
         <%= f.label :販売停止中 %>
      </div>

      <div class="actions">
        <label class="col-sm-2 control-label"></label>
        <%= f.submit "新規登録", class:"btn btn-success" %>
      </div>
  　<% end %>

