<h3>商品一覧</h3>

<table>
　<thead>
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.id %></td>
        <td>
          <%= link_to admin_item_path(item.id) do %>
          <%= item.name %>
          <% end %></td>
        <td><%= item.price %></td>
        <td><%= item.category.name %></td>
        <td>
          <% if item.is_active? %>
          <p>販売中</p>
          <% else %>
          <p>販売停止中</p>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
  </table>
