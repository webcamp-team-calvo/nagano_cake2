<div class='container'>
  <div class='row'>
    <div class='col-lg-12'>
     <h3>商品一覧</h3>
     <table class="table">
      <tr>
        <th>商品ID</th>
        <th>商品名</th>
        <th>税抜価格</th>
        <th>ジャンル</th>
        <th>ステータス</th>
      </tr>
        <% @items.each do |item| %>
      <tr>
        <td><%= item.id %></td>
        <td>
          <%= link_to admin_item_path(item.id) do %>
          <%= item.name %>
          <% end %>
         </td>
        <td><%= item.price %></td>
        <td><%= item.category.name %></td>
        <td>
          <% if item.is_active? %>
          <p class="text-success">販売中</p>
          <% else %>
          <p class="text-secondary">販売停止中</p>
          <% end %>
        </td>
      </tr>
       <% end %>
     </table>
   </div>
  </div>
</div>


