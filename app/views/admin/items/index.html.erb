<div class='container'>
<div style="position:absolute; top: 120px; right: 120px;">
	 <%= link_to new_admin_item_path do %>
		<div class="fas fa-plus-circle fa-3x colo
		
		"></div>
	 <% end %>
	 </div>
  <div class='row'>
    <div class='col-lg-12'>
     <h3 class="col-sm-2 bg-light text-center m-5" >商品一覧</h3>
     <table class="table">
      <tr class="table-light">
        <th>商品ID</th>
        <th>商品名</th>
        <th>税抜価格</th>
        <th>ジャンル</th>
        <th>ステータス</th>
      </tr>
        <% @items.each do |item| %>
      <tr>
        <td><%= item.id %></td>
        <td>
          <%= link_to admin_item_path(item.id) do %>
          <%= item.name %>
          <% end %>
         </td>
        <td><%= item.price.to_s(:delimited) %></td>
        <td><%= item.category.name %></td>
        <td>
          <% if item.is_active? %>
          <p class="text-success">販売中</p>
          <% else %>
          <p class="text-secondary">販売停止中</p>
          <% end %>
        </td>
      </tr>
       <% end %>
     </table>
   </div>
  </div>
</div>

<div class="container page">
  <%= paginate @items %>
</div>

