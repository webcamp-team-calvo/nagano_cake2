<h3>ジャンル一覧・追加</h3>

<%= form_with model: @category, local:true do |f| %>

<div class="field">
<p>ジャンル名</p>
<%= f.text_field :name %>
</div>
<%= f.submit "新規登録" %>
<% end %>

<thead>
    <tr>
      <th>ジャンル</th>
    </tr>
  </thead>
  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %>
            <%= link_to "編集する", edit_admin_category_path(category) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>