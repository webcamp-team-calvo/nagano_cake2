<div class="container">
  <div class="row">
	 <div class="col-lg-5">

    <h5 class="bg-light">ジャンル編集</h5>
      <%= form_with model: [:admin, @category], local:true do |f| %>
        <table class="table">
          <tr>
            <th><%= attachment_image_tag(@item, :image, :fill, 100, 100, fallback: "no-image-icon.jpg") %></th>
           <th>ジャンル名</th>
           <th><%= f.text_field :name %></th>
           <th><%= f.submit "変更を保存", class: "btn btn-success"%></th>
          </tr>
        </table>
     <% end %>
    </div>
   </div>
</div>