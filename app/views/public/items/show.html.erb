<div class="container mx-auto mt-5">
  <div class="row justify-content-center">
    <div class="col-3">
    <%= attachment_image_tag @item, :image, format: 'jpeg', size: "225x175" %>
    </div>
    <div class="item_info col-4">
      <h4><%= @item.name %></h4><br>
      <p><%= @item.information %></p>
      ￥<%= addTax(@item.price).to_s(:delimited) %>(税込)
      <%= form_with url: cart_items_path, method: :post, local: true do |f| %>
        <%= f.select :amount, options_for_select(@amounts_array, selected: @amounts_array[0], disabled: @amounts_array[0]) %>
        <%#= f.select :amount, options_for_select((1..99).to_a), :prompt => '個数選択' %>
        <%= f.hidden_field :item_id, :value => @item.id %>
        <%= f.submit 'カートに入れる', class: 'btn btn-success'  %>
      <% end %>
    </div>
  </div>
</div>