<h2>商品一覧</h2>
<span>(全<%= @items.count %>件)</span>

<div class= "container">
  <% @items.each do |item| %>
    <%= link_to item_path(item) do %>
    <%= attachment_image_tag item, :image, format: 'jpeg', size: "75x50" %>
    <% end %>
    <%= item.name %><br>
    ￥<%= item.price.to_s(:delimited) %><br>
  <% end %>
  <%= paginate @items %>
</div>