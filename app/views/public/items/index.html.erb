<h2>商品一覧</h2>
<span>(全<%= @active_items.count %>件)</span>

<div class= "container items">
  <% @active_items.each do |item| %>
    <div class="col-sm-3">
    <%= link_to item_path(item) do %>
    <%= attachment_image_tag item, :image, format: 'jpeg', size: "200x125" %><br>
    <% end %>
    <%= item.name %><br>
    ￥<%= item.price.to_s(:delimited) %><br>
    </div>
  <% end %>
</div>

<div class="container page">
  <%= paginate @active_items %>
</div>