<div class="container mt-5">
  <div class="row">
    <div class="item_index_head">
      <h4>商品一覧</h4>
      <p class="items_counts">(全<%= @active_items.count %>件)</p>
    </div>
    <div class= "container items mt-2">
      <% @active_items.each do |item| %>
        <div class="col-sm-3">
          <div>
            <%= link_to item_path(item) do %>
            <%= attachment_image_tag item, :image, format: 'jpeg', size: "200x125" %><br>
            <% end %>
          </div>
          <p class="mt-3"><%= item.name %></p>
          <p class="mb-4">￥<%= item.price.to_s(:delimited) %></p>
        </div>
      <% end %>
    </div>
    <div class="container page">
      <%= paginate @active_items %>
    </div>
  </div>
</div>