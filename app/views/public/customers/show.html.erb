<div class="container mt-5">
  <h4>マイページ</h4>
  <div class="row mt-3">
    <div class="col-md-2 col-lg-1">
      <p class="font-weight-bold">登録情報</p>
    </div>
    <div class="col">
      <span><%= link_to '編集する', edit_customer_path, class:'btn btn-success btn-sm' %></span>
    </div>
  </div>

  <div class="row">
    <div class="col-8">
      <!--会員登録情報ここから-->
      <table class="table table-sm table-bordered">
        <tbody>
          <tr>
            <td class="table-secondary" width="150">氏名</td>
            <td><%= @customer.last_name %>　<%= @customer.first_name %></td>
          </tr>
          <tr>
            <td class="table-secondary" width="150">カナ</td>
            <td><%= @customer.last_name_kana %>　<%= @customer.first_name_kana %></td>
          </tr>
          <tr>
            <td class="table-secondary" width="150">郵便番号</td>
            <td><%= @customer.postcode %></td>
          </tr>
          <tr>
            <td class="table-secondary" width="150">住所</td>
            <td><%= @customer.address %></td>
          </tr>
          <tr>
            <td class="table-secondary" width="150">電話番号</td>
            <td><%= @customer.phone_number %></td>
          </tr>
          <tr>
            <td class="table-secondary" width="150">メールアドレス</td>
            <td><%= @customer.email %></td>
          </tr>
        </tbody>
      </table>
      <!--会員登録情報ここまで-->
    </div>
  </div>

  <div class="row">
    <div class="col-md-2 col-lg-1">
      <p class="font-weight-bold mt-1">配送先</p>
      <p class="font-weight-bold mt-4">注文履歴</p>
    </div>
    <div class="col">
      <p><%= link_to '一覧を見る', deliveries_path, class:'btn btn-primary btn-sm' %></p>
      <p><%= link_to '一覧を見る', orders_path, class:'btn btn-primary btn-sm' %></p>
    </div>
  </div>
</div>