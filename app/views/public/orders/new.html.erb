<div class="container">
  <div class="row mt-5">
    <div class="col-10">
      <h4 class="bg-light text-center" style="width:200px">注文情報入力</h4>

      <%= form_with model:@order, local:true do |f| %>
      <h6>支払い方法</h6>
      <div class="form-check">
          <%= f.radio_button :payment_method, 0 %>
          <%= f.label :payment_method, 'クレジットカード', class:'mr-3' %>
      </div>
      <div class="form-check">
          <%= f.radio_button :payment_method, 1 %>
          <%= f.label :payment_method, '銀行振込' %>
      </div>

      <h6>お届け先</h6>
      <div class="form-check">
          <%= f.radio_button :address, current_customer.address %>
          <%= f.label :address, 'ご自身の住所', class:'mr-3' %>
          <p>〒<%= current_customer.postcode %> <%= current_customer.address %><br />
          <%= current_customer.last_name %><%= current_customer.first_name %>
          </p>
      </div>
      <div class="form-check">
          <%= f.radio_button :address, 1 %>
          <%= f.label :address, '登録済住所から選択' %>
      </div>
          <%= f.collection_select :address, current_customer.deliveries, :id, :view_all, class:'custom-select' %>
      <div class="form-check">
          <%= f.radio_button :address, 1 %>
          <%= f.label :address, '新しいお届け先' %>
      </div>
      <div class="form-group row">
        <%= f.label :郵便番号（ハイフンなし）, class:"col-sm-3 col-form-label" %>
        <div class="col-3">
          <%= f.text_field :postcode, autofocus: true, autocomplete: "postcode", placeholder: "0000000", class:"form-control" %>
        </div>
      </div>
      <div class="form-group row">
        <%= f.label :住所, class:"col-sm-3 col-form-label" %>
        <div class="col-6">
          <%= f.text_field :address, autofocus: true, autocomplete: "address", placeholder: "東京都渋谷区代々木神園0-0", class:"form-control" %>
        </div>
      </div>
      <div class="form-group row">
        <%= f.label :宛名, class:"col-sm-3 col-form-label" %>
        <div class="col-3">
          <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "令和道子", class:"form-control" %>
        </div>
      </div>
      
    </div>
  </div>
</div>
<% end %>