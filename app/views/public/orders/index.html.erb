<div class="container mt-5">
  <h4 class="mt-3">注文履歴一覧</h4>
  <div class="row">
    <table class="table table-bordered mt-2">
      <thead class="thead-light">
        <tr>
          <th>注文日</th>
          <th>配送先</th>
          <th>注文商品</th>
          <th>支払金額</th>
          <th>ステータス</th>
          <th>注文詳細</th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
        <tr>
          <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
          <td>
            〒<%= order.postcode %><br>
            <%= order.address %><br>
            <%= order.name %>
          </td>
          <td>
            <% order.order_items.each do |order_item| %>
              <%= order_item.item.name %><br>
            <% end %>
          </td>
          <td><%= order.total_payment.to_s(:delimited) %>円</td>
          <td><%= order.status %></td>
          <td><%= link_to "表示する", order_path(order), class: "btn btn-primary col-xs-2 col-xs-offset-5" %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>